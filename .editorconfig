# EditorConfig helps maintain consistent coding styles between editors and IDEs
root = true

[*.{py,yml,yaml,md,css,scss,html,xml,json,ts,tsx,js,jsx}]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 88

[*.py]
indent_size = 4
max_line_length = 88

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[*.json]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
max_line_length = 88

[*.yml]
indent_size = 2
