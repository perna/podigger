# Environment variables for Production
# Copy this to .env.production and fill with actual values
# NEVER commit this file with real values!

# Django Settings
DJANGO_SECRET_KEY=your-production-secret-key-here-change-this-to-strong-random-value
DJANGO_DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings
ALLOWED_HOSTS=api.podigger.perna.app
CORS_ALLOWED_ORIGINS=https://podigger.perna.app

# Database (PostgreSQL)
DATABASE_HOST=db-production
DATABASE_PORT=5432
DATABASE_NAME=podigger_production
DATABASE_USER=podigger_production
DATABASE_PASSWORD=your-production-db-password-here-use-strong-password

# Redis (Cache and Celery)
REDIS_URL=redis://redis-production:6379/1
CELERY_BROKER_URL=redis://redis-production:6379/0
CELERY_RESULT_BACKEND=redis://redis-production:6379/0

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-app-password

# Sentry (recommended for production error tracking)
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=production

# AWS S3 (recommended for production media storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=podigger-production
# AWS_S3_REGION_NAME=us-east-1

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Logging
LOG_LEVEL=WARNING
