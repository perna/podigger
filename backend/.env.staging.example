# ========================================
# STAGING ENVIRONMENT CONFIGURATION
# ========================================
# 
# SECURITY WARNING: This is a template file!
# 1. Copy this file to .env.staging
# 2. Fill in the actual values
# 3. NEVER commit .env.staging to version control
#
# Usage:
#   cp .env.staging.example .env.staging
#   # Edit .env.staging with your actual values
# ========================================

# Django Settings
# ========================================
DEBUG=False
SECRET_KEY=your-secret-key-here-min-50-chars-random-string
DJANGO_SETTINGS_MODULE=config.settings
ENVIRONMENT=staging

# Security
# ========================================
ALLOWED_HOSTS=staging.api.podigger.perna.app,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://staging.api.podigger.perna.app,https://staging.podigger.perna.app
CORS_ALLOWED_ORIGINS=https://staging.podigger.perna.app

# Database
# ========================================
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=podigger_staging
DATABASE_USER=podigger_staging
DATABASE_PASSWORD=your-secure-database-password-here
DATABASE_HOST=db-staging
DATABASE_PORT=5432

# Redis & Celery
# ========================================
REDIS_URL=redis://redis-staging:6379/1
CELERY_BROKER_URL=redis://redis-staging:6379/0
CELERY_RESULT_BACKEND=redis://redis-staging:6379/0

# Email Configuration (optional)
# ========================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@podigger.perna.app

# Storage (optional - for S3/Cloud Storage)
# ========================================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=podigger-staging-media
# AWS_S3_REGION_NAME=us-east-1

# Monitoring & Logging (optional)
# ========================================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# LOG_LEVEL=INFO

# API Keys (if needed)
# ========================================
# PODCAST_INDEX_API_KEY=your-podcast-index-api-key
# PODCAST_INDEX_API_SECRET=your-podcast-index-api-secret
